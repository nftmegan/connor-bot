{
  "name": "connor-bot-monorepo",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"DOCKER,BACKEND,FRONTEND\" -c \"blue,green,magenta\" \"docker compose up\" \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm -r build",
    "db:push": "pnpm --filter backend db:push",
    "db:migrate": "pnpm --filter backend db:migrate",
    "playwright:install": "pnpm --filter scraper playwright:install",
    "docker:build": "pnpm -r docker:build",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "clean": "rm -rf node_modules */node_modules */dist */build",
    "reinstall": "pnpm clean && pnpm install",
    "full-upgrade": "./upgrade-system.sh"
  },
  "devDependencies": {
    "turbo": "^2.7.2"
  },
  "pnpm": {
    "overrides": {
      "rimraf": "^6.0.0",
      "glob": "^10.4.0",
      "inflight": "npm:lru-cache@^10.2.0",
      "@esbuild-kit/esm-loader": "npm:tsx@latest",
      "@esbuild-kit/core-utils": "npm:tsx@latest"
    }
  }
}
